        <DataGrid x:Name="datagrid" Grid.Row="0" Grid.Column="0"
                  ItemsSource="{Binding Table}" AutoGenerateColumns="True"
                  >

            <DataGrid.CellStyle>
                <Style TargetType="DataGridCell" >
                    <Style.Triggers>
                        <Trigger Property="IsSelected" Value="True">
                            <Setter Property="Background" Value="SeaGreen"/>
                        </Trigger>
                        <!--FONCTIONNE !!!! https://stackoverflow.com/questions/14785038/how-do-you-change-wpf-datagrid-cell-background-while-editing-the-cell ANSWER 2 ET NOTE 2-->
                        <Trigger Property="IsEditing" Value="True">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="DataGridCell">
                                        <TextBox Text="{Binding RelativeSource={RelativeSource TemplatedParent}, Path=Content.Text, Mode=TwoWay, UpdateSourceTrigger=Default}"
                                                 FocusManager.FocusedElement="{Binding RelativeSource={RelativeSource Self}}"
                                                HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Padding="0" BorderThickness="0" 
                                                 Background="LightBlue" Foreground="Beige"/>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Trigger>

                    </Style.Triggers>
                </Style>
            </DataGrid.CellStyle>

